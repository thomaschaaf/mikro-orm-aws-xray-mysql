{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": false,
      "strict": true,
      "suppressImplicitAnyIndexErrors": true,
      "esModuleInterop": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": [
      "**/node_modules",
      "**/dist"
    ]
}